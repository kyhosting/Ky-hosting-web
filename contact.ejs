<%- include('partials/navbar') %>

<section class="py-20 px-10" data-aos="fade-left">
  <h2 class="text-4xl font-bold mb-6 text-center">Kontak Kami</h2>
  <form action="/send" method="POST" class="max-w-xl mx-auto bg-white p-8 shadow rounded-lg">
    <input type="text" name="name" placeholder="Nama Anda" class="w-full mb-4 p-3 border rounded" required>
    <input type="email" name="email" placeholder="Email Anda" class="w-full mb-4 p-3 border rounded" required>
    <textarea name="message" rows="5" placeholder="Pesan Anda" class="w-full mb-4 p-3 border rounded" required></textarea>
    <button type="submit" class="bg-blue-700 text-white px-6 py-3 rounded-full hover:bg-blue-800 w-full">Kirim Pesan</button>
  </form>
</section>

